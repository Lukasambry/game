<!DOCTYPE html>
<html lang="fr">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Register</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
      tailwind.config = {
        theme: {
          extend: {
            colors: {
              primary: "#0F8F68",
              background: "#121212",
              textLight: "#FFFFFF",
              textMuted: "#CCCCCC",
              secondary: "#001514",
            },
          },
        },
      };
    </script>
  </head>
  <body class="bg-background text-textLight min-h-screen flex items-center justify-center">
    <div
      class="max-w-2xl w-full bg-secondary p-6 rounded-lg shadow-lg"
      style="box-shadow: 0px 8px 24px white; backdrop-filter: blur(10px);">
      <form action="/user/register" method="POST">
        {{ csrfField() }}
        <!-- Header -->
        <div class="text-center">
          <h3 class="text-2xl font-bold text-primary mb-4">Cr√©er un compte</h3>
        </div>

        <!-- Username Field -->
        <div class="mt-4">
          <label for="username" class="block text-sm font-medium text-textMuted">Nom d'utilisateur</label>
          <div class="mt-2">
            <input
              type="text"
              name="username"
              id="username"
              value="{{ old('username') || '' }}"
              required
              class="w-full px-4 py-2 text-black rounded-md focus:outline-none focus:ring-2 focus:ring-primary focus:border-primary"
            />
          </div>
        </div>

        <!-- Email Field -->
        <div class="mt-4">
          <label for="email" class="block text-sm font-medium text-textMuted">Adresse email</label>
          <div class="mt-2">
            <input
              type="email"
              name="email"
              id="email"
              value="{{ old('email') || '' }}"
              required
              class="w-full px-4 py-2 text-black rounded-md focus:outline-none focus:ring-2 focus:ring-primary focus:border-primary"
            />
          </div>
        </div>

        <!-- Password Field -->
        <div class="mt-4">
          <label for="password" class="block text-sm font-medium text-textMuted">Mot de passe</label>
          <div class="mt-2">
            <input
              type="password"
              name="password"
              id="password"
              required
              class="w-full px-4 py-2 text-black rounded-md focus:outline-none focus:ring-2 focus:ring-primary focus:border-primary"
            />
          </div>
        </div>

        <!-- Password Confirmation Field -->
        <div class="mt-4">
          <label for="password_confirmation" class="block text-sm font-medium text-textMuted">Confirmation du mot de passe</label>
          <div class="mt-2">
            <input
              type="password"
              name="password_confirmation"
              id="password_confirmation"
              required
              class="w-full px-4 py-2 text-black rounded-md focus:outline-none focus:ring-2 focus:ring-primary focus:border-primary"
            />
          </div>
        </div>

        <!-- Submit Button -->
        <div class="mt-6">
          <button
            type="submit"
            class="w-full px-4 py-2 text-sm font-medium text-white bg-primary rounded-md hover:bg-opacity-90 focus:outline-none focus:ring-2 focus:ring-primary focus:ring-offset-2"
          >
            S'inscrire
          </button>
        </div>
      </form>
    </div>
  </body>
</html>
